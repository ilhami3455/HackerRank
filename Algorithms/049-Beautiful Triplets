def beautifulTriplets(d, arr):
    count=0
    for i in range(n):
        if arr[i]+d in arr and arr[i]+2*d in arr:
            count+=1
    print(count)

    #liste = [(i, j, k) for i in arr for j in arr for k in arr if i < j < k and (j - i) == (k - j) == d]

nd = input().split()
n = int(nd[0])
d = int(nd[1])
arr = list(map(int, input().rstrip().split()))
beautifulTriplets(d, arr)


